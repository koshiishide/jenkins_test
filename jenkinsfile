pipeline {
  agent any
  stages {
    stage('checkout') {
          steps {
            sh 'echo "building the repo"'
            checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'SSH2', url: 'git@github.com:koshiishide/jenkins_test.git']]])
          }
    }
  
    stage('Test') {
      steps {
        /*
        unit testでエラーだとDeployには進めない
        */
        sh 'python3 test_app.py'
      }
    }
  
    stage('Deploy')
    {
      steps {
        echo "deploying the application"
        /* git clone gitのクレデンシャル*/
        git(credentialsId: 'SSH2', branch: [[name: '*/main']],url: 'git@github.com:koshiishide/jenkins_test.git')
      }
    }
  }
  
  post {
        always {
            echo 'The pipeline completed'
        }
        success {                   
            echo "Flask Application Up and running!!"
            sh 'python3 run'
        }
        failure {
            echo 'Build stage failed'
            error('Stopping early…')
        }
      }
}